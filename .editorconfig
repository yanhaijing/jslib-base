# 根目录的配置
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.html]
indent_size = 2

[*.{css,less,scss}]
indent_size = 2

[*.{cjs,js,ts}]
indent_size = 2

[*.{jsx,tsx}]
indent_size = 2

[*.vue]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.{md,markdown}]
indent_size = 2
